<div class="items-sell-main">
  <h2 class="items-sell-title">扱った重量と種目を入力</h2>
  <%= form_with model: @weight, local: true do |f| %>
    <div class="form-group">
      <label for="ranking_weight">重量</label>
      <%= f.text_field :weight, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="ranking_category">種目</label>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"ranking-category"}) %>
    </div>
    <%= f.submit "投稿する", class: "btn btn-primary" %>
<% end %>
